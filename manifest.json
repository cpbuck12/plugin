{
  "name": "iDesktop",
  "version": "1.0",
  "manifest_version": 2,
  "description": "The iDesktop extension.",

  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Go to iDesktop"
  },
  "content_scripts": [
  {
    "matches" : ["http://*/*","https://*/*","file://*"],
    "js" : ["idesktop.js"],
    "run_at" : "document_idle"
  }
  ],
  "background": {
    "page": "background.html"
  },
  "permissions": ["tabs", "http://*/*", "https://*/*", "file://*"]
}
